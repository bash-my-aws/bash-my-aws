  az ad sp list \
    --query "[].[
      appId,
      appOwnerTenantId,
      appDisplayName
    ]" \
    --output tsv |
    grep -E -- "$filters" |
    LC_ALL=C sort -t$'\t' -b -k 3 |
    columnise
}

management-groups() {
  local filters=$(__bma_read_filters-az $@)
  az account management-group list \
    --query "[].[ displayName]" \
    --output tsv |
    grep -E -- "$filters"
}
